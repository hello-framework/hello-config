{
  "name": "hello-config",
  "version": "3.0.1",
  "description": "Simple environment-specific configuration for Node.js apps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/cli.js",
  "repository": "https://github.com/hello-js/hello-config",
  "author": "Matt Venables <mattvenables@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "yarn lint --fix",
    "lint": "tslint -p tsconfig.json",
    "postversion": "git push && git push --tags",
    "prepare": "yarn build",
    "test": "jest",
    "version": "yarn format && git add -A"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "files": [
    "bin/**/*",
    "dist/**/*"
  ],
  "dependencies": {
    "dotenv": "^6.2.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.5",
    "@types/lodash": "^4.14.121",
    "@types/node": "^11.9.4",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  }
}
