{
  "name": "hello-config",
  "version": "1.0.1",
  "description": "Simple environment-specific configuration",
  "main": "lib/index.js",
  "repository": "https://github.com/hello-js/hello-config",
  "author": "Matt Venables <mattvenables@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "./node_modules/.bin/standard && NODE_ENV=test ./node_modules/.bin/nyc --reporter=lcov --reporter=text ./node_modules/.bin/mocha 'test/**/*.spec.js'",
    "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls"
