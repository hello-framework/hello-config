    "lodash.set": "^4.3.2"
  },
  "devDependencies": {
    "chai": "^4.0.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "standard": "^10.0.2"
  }
}
