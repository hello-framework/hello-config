{
  "name": "hello-config",
  "version": "1.0.1",
  "description": "Simple environment-specific configuration",
  "main": "lib/index.js",
  "repository": "https://github.com/hello-js/hello-config",
  "author": "Matt Venables <mattvenables@gmail.com>",
  "license": "MIT",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "format": "xo --fix",
    "lint": "xo",
    "test": "xo && nyc ava"
  },
  "nyc": {
    "reporters": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
      "import/order": "off"
    }
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "dependencies": {
    "dotenv": "^5.0.0",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "coveralls": "^3.0.0",
    "nyc": "^11.4.1",
    "xo": "^0.18.2"
  }
}
